@model IEnumerable<Ticket>

@{
    ViewData["Title"] = "Tickets";
}

<div class="text-center">
    <h1 class="display-4">Tickets</h1>
    <a class="btn btn-primary" asp-controller="Tickets" asp-action="Novo">Novo</a>
</div>

<div class="text-center">
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Entrada</th>
                <th>Saída</th>
                <th>Valor</th>
                <th>Id do Veiculo</th>
                <th>Id da Vaga</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model){
                <tr>
                    <td>@item.Id</td>
                    <td>@item.DataEntrada</td>
                    <td>@item.DataSaida</td>
                    <td>@item.Valor.ToString("C", new System.Globalization.CultureInfo("pt-BR"))</td>
                    <td>@item.VeiculoId</td>
                    <td>@item.VagaId</td>
                    <td>
                        <a class="btn btn-warning" asp-route-id="@item.Id" asp-action="Editar" asp-controller="Tickets">
                            Alterar
                        </a>
                    </td>
                    <td>
                        <form onsubmit="return confirm('Confirma?')" asp-route-id="@item.Id" asp-action="Apagar" asp-controller="Tickets" method="post">
                            <button type="submit" class="btn btn-danger">Excluír</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>