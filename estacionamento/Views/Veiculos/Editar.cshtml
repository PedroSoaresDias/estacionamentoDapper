@model estacionamentoDapper.Models.Veiculo;

@{
    ViewData["Title"] = "Editando Veiculo";
}

<div class="text-center">
    <h1 class="display-4">Editando veiculo</h1>
</div>

<div class="text-left">
    <form asp-action="Alterar" asp-controller="Veiculos" asp-route-id="@Model.Id" method="post">
        <div class="form-group">
            <label for="Placa">Placa</label>
            <input type="text" class="form-control" value="@Model.Placa" id="Placa" asp-for="Placa" required>
        </div>
        <div class="form-group">
            <label for="Marca">Marca</label>
            <input type="text" class="form-control" value="@Model.Marca" id="Marca" asp-for="Marca" required>
        </div>
        <div class="form-group">
            <label for="Modelo">Modelo</label>
            <input type="text" class="form-control" value="@Model.Modelo" id="Modelo" asp-for="Modelo" required>
        </div>
        <div class="form-group">
            <label for="ClienteId">ClienteId</label>
            <input type="text" class="form-control" value="@Model.ClienteId" id="ClienteId" asp-for="ClienteId" required>
        <br>
        <button type="submit" class="btn btn-primary">Salvar</button>
    </form>
</div>